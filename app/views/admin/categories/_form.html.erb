<%= form_with(model: [ :admin, category], local: true) do |f| %>

  <% if category.errors.any? %>
    <% category.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  <% end %>
  
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <br/>
  <div>
    <%= f.submit %>
  </div>
<% end %>